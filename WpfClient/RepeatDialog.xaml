<Window x:Class="WpfClient.RepeatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Closing="Window_Closing"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        Title="RepeatDialog" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="10">Do you want repeat?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Margin="5" Name="okButton" Click="Ok" IsDefault="True">OK</Button>
            <Button Margin="5" Name="cancelButton" Click="Cancel" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
